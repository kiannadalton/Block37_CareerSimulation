generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       String     @id @default(uuid())
  username String     @unique
  password String
  comments comments[]
  reviews  reviews[]
}

model comments {
  id        String  @id @default(uuid())
  comment   String
  author_id String
  user      users   @relation(fields: [author_id], references: [id])
  review_id String
  review    reviews @relation(fields: [review_id], references: [id])
}

model reviews {
  id       String     @id @default(uuid())
  score    Float
  txt      String
  user_id  String
  user     users      @relation(fields: [user_id], references: [id])
  item_id  String
  item     items      @relation(fields: [item_id], references: [id])
  comments comments[]
}

model items {
  id          String    @id @default(uuid())
  name        String
  description String
  reviews     reviews[]
}
